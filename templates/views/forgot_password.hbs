<body class="white">

	<div class="container">
		<div class="row d-flex align-items-center vh-100">

			<div class="col-md-6 card-new">

				<div class="card1 pb-5">

					<div class="row px-3  mt-4 mb-5 border-line"> <img src="img/landing.svg" class="image"> </div>
				</div>

			</div>
			<div class="col-md-5 m-auto">
				<div id="login">
					<aside>
						<div class="text-center">
							<h3 class="forgot_heading">FORGOT PASSWORD?</h3>
							<p class="errorMessage">{{errMsg}}</p>
						</div>

						<form action="/send_otp" method="post" class="forgot_password_form">

                            <div class="float-right mt-1 forgot_label_msg"><p>Enter the email address or mobile phone number associated with your YESQ account.</p></div>
							<div class="form-group">
								<label for="" class="input-label">Mobile Number</label>
								<input type="text" class="form-control" name="mobile" id="mobile" class="signInMobile">
								<input type="hidden" class="d-none" name="appName" value="YESQ">
							</div>
							<div class="clearfix add_bottom_30">

							</div>
							<button type="submit" class="btn_1 rounded full-width">CONTINUE</button>
							
						</form>

					</aside>
				</div>
			</div>
		</div>
	</div>



	<script src="js/common_scripts.js"></script>
	<script src="js/functions.js"></script>
	<script src="assets/validate.js"></script>


